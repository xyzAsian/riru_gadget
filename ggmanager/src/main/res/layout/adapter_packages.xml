<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/adapter_iv_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginVertical="10dp"/>

    <TextView
        android:id="@+id/adapter_tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/adapter_iv_icon"
        android:layout_alignTop="@id/adapter_iv_icon"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/adapter_tv_pkgname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/adapter_iv_icon"
        android:layout_below="@id/adapter_tv_label"
        android:lines="1"
        android:layout_marginStart="5dp"/>

</RelativeLayout>